OFILES=\
	dat.cmo\
	symbol.cmo\
	grapheval.cmo\
	LALR.cmo\
	gen.cmo\
	main.cmo\

IFILES=\
	symbol.mli\
	grapheval.mli\
	LALR.mli\
	gen.mli\

MLFILES=${OFILES:%.cmo=%.ml}

TARG=serpent

all:V: depend $TARG

depend:V:
	ocamldep $MLFILES $IFILES > .depend

test:V: $TARG
	@{cd test; mk}

$TARG: $OFILES
	ocamlc -g -o $target $prereq

%.cmo: %.ml
	ocamlc -g -c $stem.ml

%.cmi: %.mli
	ocamlc -g -c $stem.mli

clean:V:
	rm -f *.cmi *.cmo

<.depend
